<div class="main-header">
  <div class="groupname">
    kanakoschat
  </div>

  <div class="end-chat">
    <a href="#">チャットを終了する</a>
  </div>
</div>

<div class="messages">
  <div class="message1">
    <div class="message-name">kanako</div>
    <div class="message-date">2020/10/12(Mon) 12:00:00</div>
  </div>
  <div class="message-text">おはよう</div>

  <div class="message2">
    <div class="message-name">tom</div>
    <div class="message-date">2020/10/12(Mon) 12:01:00</div>
  </div>
  <div class="message-text">おはよう!</div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
